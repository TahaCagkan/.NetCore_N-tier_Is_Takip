@model JobUpdateViewModel
@{
    ViewData["Title"] = "UpdateJob";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateJob" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label>Ad :</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama :</label>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz :</label>
        <span asp-validation-for="@Model.EmergencyId" class="text-danger"></span>
        <select asp-for="EmergencyId" class="form-control" asp-items="ViewBag.Emergency">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-info btn-sm"><i class="far fa-save mr-2"></i>Kaydet</button>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}

