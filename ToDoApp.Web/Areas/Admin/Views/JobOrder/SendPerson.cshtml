@model JobListViewModel
@{
    ViewData["Title"] = "SendPerson";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string s = (string)ViewBag.SearchBy;
}

<div class="row mt-2">
    <div class="col-md-12 mb-2">

        @if (!string.IsNullOrWhiteSpace(s))
        {
            <div class="border boder-dark p-3 mb-2">
                <strong>
                    @s
                </strong> kelimesi için sonuçları görüyorsunuz.
                <a asp-action="SendPerson" asp-route-id="@Model.Id" class="float-right btn btn-secondary"><i class="fas fa-times-circle mr-2"></i>Filtreyi kaldır</a>
            </div>
        }

        <form method="get" asp-action="SendPerson" class="text-right">
            <input type="text" name="s" class="form-control-sm border
                   border-primary border-top-0 border-left-0 border-right-0" />
            <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-search mr-2"></i>Ara</button>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card border border-primary shadow">
            <div class="card-header">
                <h4 class="text-center lead pt-2">Görev Bilgileri</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    @Model.Description
                </p>
                <p class="card-text">
                    <span>Aciliyet Durumu :</span><span class="badge badge-info">@Model.Emergency.Definition</span>
                </p>
                <p class="card-text">
                    <small>
                        @Model.CreateDate.ToString("D")
                    </small>
                </p>

            </div>
        </div>
    </div>

    <div class="col-md-8">



        @foreach (var item in (List<AppUserListViewModel>)ViewBag.Personals)
        {
            <div class="card border border-primary mb-3 p-2">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@item.Picture" class="card-img img-thumbnail shadow" style="height:10rem!important;" alt="@item.Name" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name @item.SurName</h5>
                            <p class="card-text">
                            <getJobAppUserId app-user-id="@item.Id"></getJobAppUserId>
                            </p>
                            <p class="card-text"><small class="text-muted">@item.Email</small></p>
                            <a asp-action="PersonToJob" asp-route-PersonId="@item.Id" asp-route-JobId="@Model.Id" class="btn btn-success float-right btn-sm"><i class="fas fa-business-time mr-2"></i>Görevlendir</a>
                        </div>
                    </div>
                </div>
            </div>

        }
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (!string.IsNullOrWhiteSpace(s))
                {
                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                    {
                        <li class="page-item @(ViewBag.ActivePage==i?"active":"")">
                            <a class="page-link" asp-action="SendPerson" asp-route-id="@Model.Id" asp-route-paginals="@i" 
                               asp-route-s="@s">@i</a>
                        </li>

                    }
                }
                else
                {
                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                    {
                        <li class="page-item @(ViewBag.ActivePage==i?"active":"")">
                            <a class="page-link" asp-action="SendPerson" asp-route-id="@Model.Id" asp-route-paginals="@i">@i</a>
                        </li>

                    }
                }
            </ul>
        </nav>
    </div>

</div>
