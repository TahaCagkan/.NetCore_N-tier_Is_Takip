@model List<JobListAllViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if(Model.Count != 0)
{
    <table class="table table-hover table-sm mt-2">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>Çalışan Personel</th>
            <th>Aciliyet</th>
            <th>Rapor Sayısı</th>
            <th>İşlem</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.CreateDate.ToString("D")</td>
        <td>
            @{
                if (item.AppUser == null)
                {
                    <span class="badge badge-danger">Çalışan personel yok</span>
                }
                else
                {
                    <span class="badge badge-success">@item.AppUser.Name çalışıyor</span>
                }
        }
    </td>
    <td>
        @item.Emergency.Definition
    </td>
    <td>
        @item.Rapors.Count
    </td>
    <td>
        @{
            if (item.AppUser == null)
            {
                <a asp-action="SendPerson" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="far fa-paper-plane mr-2"></i>Personel Ata</a>
            }
            else
            {
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle mr-2"></i>Detay Göster</a>

            }
        }
    </td>
    </tr>
        }
    </table>
}
else
{
    <div class="my-2 text-center lead">
        Herhangi bir görev bulunmamaktadır.
    </div>
}

